<%= form_with(model: [book, post_comment]) do |f| %>
	<div class="col-xs-12" style="padding-bottom: 10px; border: 1px solid black; margin-bottom: 10px;">
		<p>コメント入力欄</p>
		<%= f.text_area :comment, class: 'form-control' %>
		<br>
		<%= f.submit '送信', class: 'btn btn-primary' %>
	</div>
<% end %>