<% if @model == 'user' %>
	<h3>User search for  '<%= @content %>'</h3>

	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
		<% @records.each do |user| %>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% else @model == 'books' %>
	<h3>Books search for '<%= @content %>'</h3>

	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
		<% @records.each do |book| %>
			<tr>
				<td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>