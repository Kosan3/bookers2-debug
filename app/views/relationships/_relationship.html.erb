<% if current_user != user %>
	<% if user.followed_by?(current_user) %>
		<%=link_to "フォローを外す", user_relationships_path(user.id), remote: true, method: :delete, class: "btn btn-primary" %>
	<% else %>
		<%=link_to "フォローする", user_relationships_path(user.id), remote: true, method: :post, class: "btn btn-success" %>
	<% end %>
<% end %>